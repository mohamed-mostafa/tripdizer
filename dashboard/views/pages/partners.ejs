  <body ng-app="G2GControlCenterApplication" class="skin-blue">
    <div class="wrapper">
      
      <header class="main-header">
        <% include ../partials/header %>
      </header>
      
      <!-- Left side column. contains the logo and sidebar -->
      <aside class="main-sidebar">
       <% include ../partials/side %>
